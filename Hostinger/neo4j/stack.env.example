# Neo4j Authentication (format: username/password)
NEO4J_AUTH=neo4j/place-your-password-here
NEO4J_PASSWORD=place-your-password-here

# Neo4j Ports
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_HTTPS_PORT=7473

# Memory Configuration (correct format: server.memory.heap.initial_size)
NEO4J_HEAP_INITIAL=1G
NEO4J_HEAP_MAX=2G
NEO4J_PAGECACHE=2G

# Security & Procedures (for APOC and Graph Data Science)
NEO4J_PROCEDURES_UNRESTRICTED=gds.*,apoc.*
NEO4J_PROCEDURES_ALLOWLIST=gds.*,apoc.*

# Query Logging & Performance
NEO4J_QUERY_LOG_ENABLED=INFO
NEO4J_QUERY_THRESHOLD=1000ms

# Metrics & Monitoring (Enterprise Edition Features)
# NEO4J_METRICS_ENABLED=true
# NEO4J_METRICS_CSV=true
# NEO4J_METRICS_INTERVAL=30s